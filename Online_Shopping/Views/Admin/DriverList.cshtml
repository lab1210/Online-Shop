@model IEnumerable<Online_Shopping.Models.Register>

@{
    ViewBag.Title = "DriverList";
    Layout = "~/Views/Shared/_LayoutList.cshtml";

}


<div class="container-fluid px-5">

    <br />
    <div style="display: flex; align-items: center; margin-bottom: 20px;">
        <i class="bi-cart-fill" style="font-size: 30px; margin-right: 10px;"></i>
        <h4 style="margin: 0;">Driver List</h4>
    </div>

    <div class="card">
        <div class="card-body">

            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <div class="row g-0">

                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(c => item.LastName) @Html.DisplayFor(c => item.FirstName)</h5>
                                    <p class="card-text text-primary"> @Html.DisplayFor(c => item.Email)</p>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center">Your Driver List is empty.</div>
            }
           
        </div>
    </div>
</div>





