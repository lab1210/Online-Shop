@model IEnumerable<Online_Shopping.Models.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_LayoutList.cshtml";


}


<div class="container-fluid px-5">

    <br />
    <div class="page-header">
        <div class="page-title">
            <i class="fas fa-table me-1"></i>

            <h4>Category List</h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">


            <div class="table-responsive">
                <table class="table datanew ">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(c => item.Code)</td>

                                <td>@Html.DisplayFor(c => item.Name)</td>
                                <td>
                                    <a class="me-3" href="@Url.Action("DeleteCategory", "Admin", new {id=item.Id})" onclick="return confirm('Are you sure you want to delete this?')" ;>
                                        <img src="~/Content/icons/delete.svg" alt="img">
                                    </a>
                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>










