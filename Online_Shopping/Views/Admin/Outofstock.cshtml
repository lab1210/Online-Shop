@model IEnumerable<Online_Shopping.Models.ProductReport>

@{
    ViewBag.Title = "Outofstock";
    Layout = "~/Views/Shared/_LayoutList.cshtml";

}


<div class="container-fluid px-5">

    <br />
    <div class="page-header">
        <div class="page-title">
            <i class="fas fa-table me-1"></i>

            <h4>Out of Stock Products</h4>
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@item.imagepath" alt="Image" class="img-fluid" style="max-height: 150px; border-radius: 5px; padding: 2px;" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">

                                    <h6 class="card-text">@Html.DisplayFor(c => item.Name) </h6>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-success">No Out of Stock Products</div>
            }

          
        </div>
    </div>
</div>






