@model IEnumerable<Online_Shopping.Models.SalesInfo>
@{
    ViewBag.Title = "ChooseClient";
    Layout = "~/Views/Shared/_LayoutDriver.cshtml";

}



<div class="container-fluid px-5">

    <br />
    <div class="page-header">
        <div class="page-title">
            <i class="fas fa-table me-1"></i>

            <h4>Client List</h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">


            <div class="table-responsive">
                <table class="table datanew ">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Package</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                @Html.HiddenFor(c => item.Sale)


                                <td>@Html.DisplayFor(c => item.user)</td>
                                <td>
                                    @foreach (var sale in item.Sale)
                                    {
                                        @Html.DisplayFor(c => sale.Name)
                                    }
                                </td>

                                <td>@Html.DisplayFor(c => item.Address)</td>
                                <td>@Html.DisplayFor(c => item.Phone)</td>


                                <td>
                                    <a class="me-3" href="@Url.Action("AssignToDriver", "Admin", new {id=item.Id})">
                                        <img src="~/Content/icons/plus.svg" alt="img">
                                    </a>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
                @if (ViewBag.message != null)
                {
                    <div class="alert alert-success justify-content-lg-end" role="alert" id="#messageAlert">
                        @ViewBag.message

                    </div>
                }
            </div>
        </div>
    </div>
</div>









