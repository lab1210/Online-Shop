@model IEnumerable<Online_Shopping.Models.Sale>

@{
    ViewBag.Title = "LowPurchase";
    Layout = "~/Views/Shared/_LayoutList.cshtml";

}

<div class="container-fluid px-5">

    <br />
    <div class="page-header">
        <div class="page-title">
            <i class="fas fa-table me-1"></i>

            <h4>Low Purchased Goods</h4>
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-body">

            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="card mb-3">
                        <div class="row g-0">

                            <div class="col-md-8">
                                <div class="card-body">

                                    <h5 class="card-text ">@Html.DisplayFor(c => item.Name) </h5>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-success">No Low Purchased Products</div>
            }

        </div>
    </div>
</div>







