@model Online_Shopping.Resources.PurchaseResource

@{
    ViewBag.Title = "PurchasedProducts";
    Layout = "~/Views/Shared/_LayoutList.cshtml";

}

<div class="container-fluid px-5">

    <br />
    <div class="page-header">
        <div class="page-title">
            <i class="fas fa-table me-1"></i>

            <h4>Purchase Details</h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">


            <div class="table-responsive">
                <table class="table datanew ">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            

                        </tr>
                    </thead>

                    <tbody>
                        @for (int i=0;i<Model.PurchasedProductResources.Count;i++)
                        {
                            <tr>
                                <td>@Html.DisplayFor(c => Model.PurchasedProductResources[i].Name)</td>

                                <td>@Html.DisplayFor(c => Model.PurchasedProductResources[i].Quantity)</td>
                                <td>@Html.DisplayFor(c => Model.PurchasedProductResources[i].Price)  each</td>

                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





