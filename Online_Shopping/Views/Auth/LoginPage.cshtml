@model Online_Shopping.Models.Login
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body ">
                    <form>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(c => c.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "name@example.com" } })

                            <label>Email address</label>
                            @Html.ValidationMessageFor(c => c.Email)

                        </div>
                        <div class="form-floating mb-3" style="display:flex">
                            <input type="password" id="password-input" name="Password" placeholder="Enter your password" class="form-control" />
                            <label for="inputPassword">Password</label>
                            <span onclick="togglePasswordVisibility()" class="fa toggle-password  fa-eye-slash " id="toggle-icon" style="padding-top:30px"></span><br />
                            @Html.ValidationMessageFor(c => c.Password)

                        </div>
                        @Html.ValidationSummary()

                        <div class="d-flex align-items-center justify-content-center">
                            <input type="submit" value="Login" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="@Url.Action("RegistrationPage", "Auth")">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

}